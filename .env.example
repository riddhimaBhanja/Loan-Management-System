# ============================================================================
# LOAN MANAGEMENT SYSTEM - ENVIRONMENT VARIABLES TEMPLATE
# ============================================================================
# Copy this file to .env and update with your actual values
# DO NOT commit .env file to version control
# ============================================================================

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=loan_management_db
DB_USER=loanapp
DB_PASSWORD=loanpass123
DB_ROOT_PASSWORD=rootpassword

# Database Connection Pool
DB_POOL_SIZE=10
DB_MAX_IDLE=5
DB_MIN_IDLE=2

# ============================================================================
# BACKEND CONFIGURATION
# ============================================================================
BACKEND_PORT=8080
BACKEND_HOST=localhost

# Spring Profile (dev, test, prod)
SPRING_PROFILES_ACTIVE=prod

# ============================================================================
# JWT CONFIGURATION
# ============================================================================
# IMPORTANT: Use a strong, unique secret in production (minimum 256 bits for HS512)
# Generate using: openssl rand -base64 64
JWT_SECRET=YourProductionSecretKeyForJWTTokenGenerationShouldBeAtLeast256BitsLongForHS512Algorithm

# JWT Token Expiration (milliseconds)
JWT_EXPIRATION=86400000          # 24 hours
JWT_REFRESH_EXPIRATION=604800000 # 7 days

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================
FRONTEND_PORT=4200
FRONTEND_HOST=localhost

# API Base URL (used by Angular)
API_URL=http://localhost:8080/api

# ============================================================================
# DOCKER CONFIGURATION
# ============================================================================
# MySQL Docker Settings
MYSQL_CONTAINER_NAME=loan-management-mysql
MYSQL_IMAGE=mysql:8.0
MYSQL_PORT_EXTERNAL=3306

# Backend Docker Settings
BACKEND_CONTAINER_NAME=loan-management-backend
BACKEND_PORT_EXTERNAL=8080

# Frontend Docker Settings
FRONTEND_CONTAINER_NAME=loan-management-frontend
FRONTEND_PORT_EXTERNAL=80

# Docker Network
DOCKER_NETWORK_NAME=loan-management-network

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:4200,http://localhost:80

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
# Log Level (TRACE, DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO
LOG_LEVEL_ROOT=WARN
LOG_LEVEL_SQL=DEBUG

# Log File Path
LOG_FILE_PATH=/var/log/loan-management

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================
# For Gmail: Use app-specific password (not your regular password)
# Generate at: https://myaccount.google.com/apppasswords
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=riddhimabhanja2003@gmail.com
MAIL_PASSWORD=vdlupendiuftigsl
MAIL_FROM=noreply@loanmanagement.com
MAIL_FROM_NAME=Loan Management System

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
# BCrypt Password Encoder Strength (4-31, default: 10)
BCRYPT_STRENGTH=10

# Session Timeout (seconds)
SESSION_TIMEOUT=1800

# Maximum Login Attempts
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
APP_NAME=Loan Management System
APP_VERSION=1.0.0
APP_TIMEZONE=Asia/Kolkata

# Pagination defaults
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# File Upload (for future implementation)
MAX_FILE_UPLOAD_SIZE=5MB
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png

# ============================================================================
# ACTUATOR CONFIGURATION
# ============================================================================
# Actuator endpoints exposure
ACTUATOR_ENABLED=true
ACTUATOR_BASE_PATH=/actuator

# Health check endpoint
HEALTH_CHECK_PATH=/actuator/health

# ============================================================================
# PRODUCTION SETTINGS
# ============================================================================
# Set to true in production
PRODUCTION_MODE=false

# Enable HTTPS
HTTPS_ENABLED=false
SSL_CERTIFICATE_PATH=/path/to/certificate.crt
SSL_CERTIFICATE_KEY_PATH=/path/to/private.key

# ============================================================================
# MONITORING & METRICS (for future implementation)
# ============================================================================
METRICS_ENABLED=false
METRICS_EXPORT_PROMETHEUS=false

# ============================================================================
# BACKUP CONFIGURATION (for future implementation)
# ============================================================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/var/backups/loan-management

# ============================================================================
# NOTES
# ============================================================================
# 1. All sensitive values (passwords, secrets) should be stored securely
# 2. Use environment-specific files: .env.dev, .env.test, .env.prod
# 3. Never commit actual .env files to version control
# 4. Rotate JWT secrets regularly in production
# 5. Use strong database passwords (minimum 16 characters)
# 6. Enable HTTPS in production
# 7. Configure firewall rules appropriately
# 8. Set up monitoring and alerting
# 9. Regular database backups are essential
# 10. Review and update security settings periodically
# ============================================================================
